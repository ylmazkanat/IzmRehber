@model IzmRehber.Models.Rehber

@{
    ViewBag.Title = "Profilim";
    ViewBag.pTitle = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <!-- DataTables -->
    <link href="~/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <!-- Responsive datatable examples -->
    <link href="~/assets/libs/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
}

<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm order-2 order-sm-1">
                        <div class="d-flex align-items-start mt-3 mt-sm-0">
                            <div class="flex-shrink-0">
                                <div class="avatar-xl me-3">
                                    <img src="~/assets/images/users/user.png" alt="" class="img-fluid rounded-circle d-block">
                                </div>
                            </div>
                            <div class="flex-grow-1">
                                <div>
                                    <h5 class="font-size-50 mb-1">@Model.AdSoyad</h5>
                                    <p class="text-muted font-size-13">@Model.Departman</p>
                                    <p class="text-muted font-size-13">@Model.Email</p>
                                    <p class="text-muted font-size-13">@Model.Tel</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-auto order-1 order-sm-2">
                        <div class="d-flex align-items-start justify-content-end gap-2">
                            <div>
                                <a href="/" class="btn btn-light">
                                    <i class="bx bx-home me-1"></i> Ana Sayfa
                                </a>
                            </div>
                            
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <hr class="mt-4 mb-4">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <h5 class="font-size-14">Kullanıcı Adı :</h5>
                            <p class="text-muted">@Model.KullaniciAdi</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <h5 class="font-size-14">Departman :</h5>
                            <p class="text-muted">@Model.Departman</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <h5 class="font-size-14">Email :</h5>
                            <p class="text-muted">@Model.Email</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <h5 class="font-size-14">Telefon :</h5>
                            <p class="text-muted">@Model.Tel</p>
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <table id="datatable" class="table table-editable table-nowrap align-middle table-edits">
                    <thead>
                        <tr>
                            

                            <th>Adı Soyadı</th>
                            <th>Departman</th>
                            <th>Telefon</th>
                            <th>E-Posta</th>
                            <th>Kullanıcı Adı</th>
                            <th>Şifre</th>

                            <th>Düzenle</th>
                            <th>Kaydet</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                <tr data-id="@Model.Id">
                    

                    <td data-field="AdSoyad">
                        <input type="text" class="form-control" value="@Model.AdSoyad" readonly />
                    </td>
                    <td data-field="Departman">
                        <input type="text" class="form-control" value="@Model.Departman" readonly />
                    </td>
                    <td data-field="Tel">
                        <input type="text" class="form-control" value="@Model.Tel" readonly />
                    </td>
                    <td data-field="Email">
                        <input type="text" class="form-control" value="@Model.Email" readonly />
                    </td>

                    <td data-field="KullaniciAdi">
                        <input type="text" class="form-control" value="@Model.KullaniciAdi" readonly />
                    </td>
                    <td data-field="Sifre" style="width: 130px">
                        <div class="input-group">
                            <input type="password" class="form-control sifre" style="width:50px" value="@Model.Sifre" readonly />
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary btn-sm toggle-password" type="button">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>
                    </td>
                    <td style="width: 30px">
                        <a class="btn btn-outline-secondary btn-sm edit" title="Edit">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                    </td>
                    <td style="width: 30px">
                        <a class="btn btn-outline-secondary btn-sm save" title="Save">
                            <i class="fas fa-save"></i>
                        </a>
                    </td>
                    
                </tr>
                    </tbody>
                    </table>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <!-- Required datatable js -->
    <script src="~/assets/libs/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/libs/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
    <!-- Responsive examples -->
    <script src="~/assets/libs/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/assets/libs/datatables.net-responsive-bs4/js/responsive.bootstrap4.min.js"></script>
    <!-- init js -->
    <script src="~/assets/js/pages/datatable-pages.init.js"></script>
    <script src="~/assets/js/app.js"></script>
}