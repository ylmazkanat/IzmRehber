@{
    ViewBag.Title = "Rehber Düzenle";
    ViewBag.pTitle = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <!-- DataTables -->
    <link href="~/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <!-- Responsive datatable examples -->
    <link href="~/assets/libs/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
}
<div class="row align-items-center">
    <div class="col-md-6">
    </div>

    <div class="col-md-6">
        <div class="d-flex flex-wrap align-items-center justify-content-end gap-2 mb-3">

            <div>
                <a href="#" class="btn btn-light"><i class="bx bx-plus me-1"></i> Yeni Kişi Ekle</a>
            </div>


        </div>

    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="datatable" class="table table-editable table-nowrap align-middle table-edits">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Adı Soyadı</th>
                                <th>Departman</th>
                                <th>E-Posta</th>
                                <th>Telefon</th>
                                <th>Düzenle</th>
                                <th>Kaydet</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model)
                            {
                                <tr data-id="@employee.Id">
                                    <td data-field="id" style="width: 60px">@employee.Id</td>
                                    <td data-field="AdSoyad">
                                        <input type="text" class="form-control" value="@employee.AdSoyad" readonly />
                                    </td>
                                    <td data-field="Departman">
                                        <input type="text" class="form-control" value="@employee.Departman" readonly />
                                    </td>
                                    <td data-field="Email">
                                        <input type="text" class="form-control" value="@employee.Email" readonly />
                                    </td>
                                    <td data-field="Tel">
                                        <input type="text" class="form-control" value="@employee.Tel" readonly />
                                    </td>
                                    <td style="width: 70px">
                                        <a class="btn btn-outline-secondary btn-sm edit" title="Edit">
                                            <i class="fas fa-pencil-alt"></i>
                                        </a>
                                    </td>
                                    <td style="width: 70px">
                                        <a class="btn btn-outline-secondary btn-sm save" title="Save">
                                            <i class="fas fa-save"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/assets/libs/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/assets/libs/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/assets/libs/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/assets/libs/datatables.net-responsive-bs4/js/responsive.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('#datatable').DataTable({
                lengthChange: true,
                pageLength: 10,
                responsive: true
            });

            $('.edit').on('click', function () {
                var row = $(this).closest('tr');
                var inputs = row.find('input');
                if (inputs.prop('readonly')) {
                    inputs.prop('readonly', false);
                    inputs.css('background-color', '#f07575');
                } else {
                    inputs.prop('readonly', true);
                    inputs.css('background-color', '#f8f9fa');
                }
            });

            $('.save').on('click', function () {
                var row = $(this).closest('tr');
                var id = row.data('id');
                var adSoyad = row.find('input').eq(0).val();
                var departman = row.find('input').eq(1).val();
                var email = row.find('input').eq(2).val();
                var tel = row.find('input').eq(3).val();

                $.ajax({
                    url: '@Url.Action("UpdateEmployee", "AdminDashboard")',
                    type: 'POST',
                    data: {
                        id: id,
                        adSoyad: adSoyad,
                        departman: departman,
                        email: email,
                        tel: tel
                    },
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                            row.find('input').prop('readonly', true);
                            row.find('input').css('background-color', '#f8f9fa'); // Save işleminden sonra arka planı #f8f9fa yap
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert('Error updating employee');
                    }
                });
            });
        });
    </script>
}
